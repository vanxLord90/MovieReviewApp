@model IEnumerable<MovieReviewApp.Models.Review>

@{
    ViewData["Title"] = "Index";
    var titles = ViewData["ReviewsByTitle"] as List<Review>; ;
    var movie = ViewData["Movies"] as List<Movie>;

}   


<h1>Reviews For @movie[0].Title </h1>

<div class="button-container">
    <a class = "btn btn-primary" asp-action="Create">Create New</a>
<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
</div>

<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 8px;
        margin: 2px;
        padding: 2px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #f0f0f0;
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

    .card-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 5px;
    }
</style>

<div class="container">
    <div class="row">
        <!-- First column (1/3 width) -->
        <div class="col-md-5">
            <div style="background-color: white; padding: 1px;">
                <!-- Content for the first column -->

                <div class="row">
                    
                    @foreach (var m in movie)
                    {
                        <div class="col">
                            <div class="card">
                            <div class="card-image">
                                    <img src="@Url.Content($"~/lib/{m.Title}.jpg")" alt="Card Image" class="card-image" style="width: 592px; height: 450px;" />
                            </div>
                            <div class="card-body">
                                <p>From Director @m.Director</p>
                                <p>Starring @m.Star</p>
                                <p>Lasting @m.Runtime minutes</p>
                                <p>Made @m.BoxOffice dollars</p>
                            </div>
                            </div>
                        </div>

                       
                    }

                </div>
            </div>
        </div>

        <!-- Second column (2/3 width) -->
        <div class="col-md-7">
            <div style="background-color: white; padding: 15px;">
                <!-- Content for the second column -->
                <div class="row">
                    @{
                        int j = 0;
                    }
                    @foreach (var item in titles)
                    {


                    <div class="col">
                            <div class="card">
                                <div class="card-header">
                                    <h3>@item.Reviewer</h3>
                                </div>
                                <div class="card-body">
                                    <img src="@Url.Content($"~/lib/{item.Reviewer}.jpg")" alt="Card Image" class="card-image" style="width: 300px; height: 250px;" />

                                 <p>Movie Reviewing: @item.Title</p>
                                 <p>Date of review: @item.ReviewDate</p>
                                 <p>Rating Given: @item.Rating</p>
                                 <p>Review Of the Movie: @item.MovieReview</p>
                                 <p></p>
                                </div>
                            </div>
                        </div>

                        j++;
                    }

                </div>
            </div>
        </div>
    </div>
</div>






